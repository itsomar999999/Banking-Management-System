    <title>Register</title>
    <style>
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: url('https://wallpaperaccess.com/full/51363.jpg');
        }

        .p {
            font-size: medium;
        }
    </style>
</head>

<body>

    <section class="background-radial-gradient overflow-hidden">
        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                    <h1 class="display-5 fw-bold ls-tight" style="color: #f03a52; position: relative; bottom: 100px; right: 50px;">
                        Welcome to Republic Citizen Bank. <br />
                        <span style="color: blue">for your business</span>
                    </h1>

                    <h4 class="mb-4 opacity-70" style="color: white; position: relative; bottom: 100px; right: 50px;">
                        Good Banking is produced not by good laws, but by good bankers. So get the bank in your pocket.
                    </h4>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                    <div class="card bg-glass" style="margin-bottom:70px;">
                        <div class="card-body px-4 py-5 px-md-5">
                            <h4 style="text-align: center;">REGISTER</h4>
                            <h6 style="text-align: center;line-height: 40px;">Register yourself by entering below details</h6>
                            <form asp-action="Register">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <h6 style="color:red;">@TempData["Message"]</h6>
                                <div class="form-outline mb-4">
                                    <label asp-for="UserName" class="form-label" for="form3Example3">User Name</label>
                                    <input asp-for="UserName" type="text" id="form3Example3" class="form-control" placeholder="Enter Username" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Password" class="form-label" for="form3Example4">Password</label>
                                    <input asp-for="Password" type="password" id="form3Example4" class="form-control" placeholder="Enter Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="ConfirmPassword" class="form-label" for="form3Example4">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" type="password" id="form3Example4" class="form-control" placeholder="Confirm Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="EmpName" class="form-label" for="form3Example4">Employee Name</label>
                                    <input asp-for="EmpName" type="text" form3Example4" class="form-control" placeholder="Enter Name" />
                                    <span asp-validation-for="EmpName" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="EmpPhone" class="form-label" for="form3Example4">Phone Number</label>
                                    <input asp-for="EmpPhone" type="number" id="form3Example4" class="form-control" placeholder="Enter Phone" />
                                    <span asp-validation-for="EmpPhone" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="SelectedRole" class="control-label"></label>
                                    @foreach (var item in Model.Roles)
                                    {
                                        <input asp-for="SelectedRole" type="radio" value="@item.Id" /> @item.RoleName
                                    }
                                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                                </div>
                                <br>
                                <div class="form-outline mb-4">
                                    <label asp-for="AdminPasskey" class="form-label" for="form3Example4">Admin PassKey</label>
                                    <input asp-for="AdminPasskey" type="number" id="form3Example4" class="form-control" />
                                    <span asp-validation-for="AdminPasskey" class="text-danger"></span>
                                </div>

                                <button type="submit" value="Create" class="btn btn-primary btn-block mb-4">
                                    Register
                                </button>
                                <button type="submit" value="Create" class="btn btn-warning btn-block mb-4">
                                    Reset
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
