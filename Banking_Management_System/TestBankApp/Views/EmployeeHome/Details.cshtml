                    <td class="col-6"><h5>@Html.DisplayNameFor(model => model.Address)</h5></td>
                    <td class="col-6"><h5>@Html.DisplayFor(model => model.Address)</h5></td>

                </tr>

            </tbody>
        </table>
        <div class="d-flex justify-content-center align-items-center">
            <a asp-action="EditDetails" asp-route-id="@Model.CusId" class="btn btn-primary">Edit Details</a>
            <a asp-action="ViewAllUser" class="btn btn-light" style="margin-left:20px;">Back</a>
        </div>
        </div>

