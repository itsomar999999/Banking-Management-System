@model DataLayer.Models.CustomerAccount

@{
    ViewData["Title"] = "EditDetails";
    Layout = "~/Views/Shared/_UserLogoutLayout.cshtml";
}



<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
    <style>
        body {
            background: linear-gradient(270deg, #ddd6f3, #faaca8);
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center" style="background: #1ba6c6; border-radius: 15px; text-align: center; margin-top: 15px; height: 50px; "><h3>Edit Customer Details</h3></div>
    <div class="container" style="height: 950px;margin-top: 50px;">

        <section>
            <div class="mask d-flex align-items-center h-100 gradient-custom-3">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center">
                        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                            <div class="card" style="border-radius: 15px;">
                                <div class="card-body p-5">
                                    <h2 class="text-uppercase text-center mb-5">Edit Details</h2>

                                    <form asp-action="EditDetails">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="CusId" />
                                        <div class="form-outline mb-4">
                                            <label asp-for="Fname" class="control-label"></label>
                                            <input asp-for="Fname" class="form-control" />
                                            <span asp-validation-for="Fname" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label asp-for="Lname" class="control-label"></label>
                                            <input asp-for="Lname" class="form-control" />
                                            <span asp-validation-for="Lname" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label asp-for="PhoneNumber" class="control-label"></label>
                                            <input asp-for="PhoneNumber" class="form-control" />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label asp-for="Pan" class="control-label"></label>
                                            <input asp-for="Pan" class="form-control" />
                                            <span asp-validation-for="Pan" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label asp-for="Aadhaar" class="control-label"></label>
                                            <input asp-for="Aadhaar" class="form-control" />
                                            <span asp-validation-for="Aadhaar" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label asp-for="Address" class="control-label"></label>
                                            <input asp-for="Address" class="form-control" />
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>

                                        <div class="d-flex justify-content-center align-items-center form-outline mb-4">
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
