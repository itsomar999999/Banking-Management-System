<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <style>
        body {
            background: linear-gradient(270deg, #ad9ee5, #faaca8);
        }

        button {
            display: flex;
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center" style="background: #1ba6c6; border-radius: 15px; text-align: center; margin-top: 15px; height: 50px; "><h3>Activate Account</h3></div>
    <div class="container" style="margin-top: 50px;">
        <h4 style="text-align:center; margin-bottom:20px;" class="text-success">Are you sure you want to close the activate?</h4>
        <table class="table table-bordered table-striped table-hover">

            <tbody style="text-align: center;" class="table-secondary">
                <tr class="row">

                    <td class="col-6"><h5>@Html.DisplayNameFor(model => model.AccId)</h5></td>
                    <td class="col-6"><h5>@Html.DisplayFor(model => model.AccId)</h5></td>

                </tr>
                <tr class="row">

                    <td class="col-6"><h5>@Html.DisplayNameFor(model => model.Balance)</h5></td>
                    <td class="col-6"><h5>@Html.DisplayFor(model => model.Balance)</h5></td>

                </tr>
                <tr class="row">

                    <td class="col-6"><h5>@Html.DisplayNameFor(model => model.Status)</h5></td>
                    <td class="col-6"><h5>@Html.DisplayFor(model => model.Status)</h5></td>

                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-center align-items-center">

            <a asp-action="ConfirmActivate" asp-route-id="@Model.AccId" class="btn btn-primary">Activate</a>
            <a asp-action="ViewAllUser" class="btn btn-light" style="margin-left:20px;">Back</a>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</body>
</html>
