<!<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body {
            background-color: lightyellow;
        }

        .footer {
            height: 54px;
            width: 100%;
            background-image: none;
            background-repeat: repeat;
            background-attachment: scroll;
            background-position: 0% 0%;
            position: fixed;
            bottom: 0pt;
            left: 0pt;
        }

        .footer_contents {
            height: 24px;
            width: 1000px;
            margin: auto;
        }
    </style>
</head>
<body>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a class="navbar-brand" href="#">
                    <img src="/Images/bank.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                    Republic Citizen Bank
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                </ul>

                <div class="text-end">
                    <a type="submit" class="btn btn-outline-danger me-2" asp-controller="Admin" asp-action="Logout">Logout</a>
                </div>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-5-strong">

        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="EmployeeHome" asp-action="Index">
                            <h5 style="color: rgba(7, 6, 6, 0.703); padding-right: 15px;">Home</h5>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="EmployeeHome" asp-action="ViewAllUser">
                            <h5 style="color: rgba(7, 6, 6, 0.703); padding-right: 15px;">View Customers</h5>
                        </a>
                    </li>
                </ul>

            </div>

        </div>

    </nav>

    @RenderBody()

    <footer class="d-flex justify-content-center align-items-center py-3 bg-dark" style="position:fixed;left:0;right:0;bottom:0;">
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            <a class="navbar-brand" href="#">
                <img src="~/images/bank.png" alt="" width="30" height="24" class="d-inline-block align-text-top ">
                Republic Citizen Bank
            </a>
            <span class="text-muted" style="color: white;">© 2022 </span>
        </div>
    </footer>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
