@model DataLayer.Models.CustomerAccount

@{
    ViewData["Title"] = "reReg";
    //Layout = "~/Views/Shared/_UserLogoutLayout.cshtml";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";
}


<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Register</title>
    <style>
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
        }

        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: -60px;
            left: -130px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: -60px;
            right: -110px;
            width: 300px;
            height: 300px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.9) !important;
            backdrop-filter: saturate(200%) blur(25px);
        }
    </style>
</head>

<body>





    <section class="background-radial-gradient overflow-hidden">


        <div class="container px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">

                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10; ">
                    <h1 class="display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%); position: relative; bottom: 250px; right: 50px;">
                        Welcome to Republic Citizen Bank. <br />
                        <span style="color: hsl(218, 81%, 75%)">for your business</span>
                    </h1>

                    <h4 class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%); position: relative; bottom: 250px; right: 50px;">
                        Good Banking is produced not by good laws, but by good bankers. So get the bank in your pocket.
                    </h4>


                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                    <div class="card bg-glass" style="margin-bottom:70px;">
                        <div class="card-body px-4 py-5 px-md-5">
                            <h4 style="text-align: center;">RE-REGISTER</h4>
                            <h6 style="text-align: center;line-height: 40px;">Re-Register yourself by entering below details</h6>
                            <form asp-action="reReg">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Fname" class="form-label" for="form3Example3">First Name</label>
                                    <input asp-for="Fname" class="form-control" style="background-color:lightgray;" placeholder="First Name" />
                                    <span asp-validation-for="Fname" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Lname" class="form-label" for="form3Example3">Last Name</label>
                                    <input asp-for="Lname" class="form-control" style="background-color:lightgray;" placeholder="Last Name" />
                                    <span asp-validation-for="Lname" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Email" class="form-label" for="form3Example3">Enter Email</label>
                                    <input asp-for="Email" class="form-control" style="background-color:lightgray;" placeholder="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="PhoneNumber" class="form-label" for="form3Example3">Enter Phonenumber</label>
                                    <input asp-for="PhoneNumber" class="form-control" style="background-color:lightgray;" placeholder="Phone Number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Pan" class="form-label" for="form3Example3">Enter Pan</label>
                                    <input asp-for="Pan" class="form-control" style="background-color:lightgray;" placeholder="PAN Number" />
                                    <span asp-validation-for="Pan" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Aadhaar" class="form-label" for="form3Example3">Enter Adhaar</label>
                                    <input asp-for="Aadhaar" class="form-control" style="background-color:lightgray;" placeholder="Aadhaar Number" />
                                    <span asp-validation-for="Aadhaar" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label asp-for="Address" class="form-label" for="form3Example3">Enter Address</label>
                                    <textarea asp-for="Address" class="form-control" style="background-color:lightgray;" placeholder="Address"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <button type="submit" value="Register" class="btn btn-primary btn-block mb-4">
                                    Re-Register
                                </button>
                                <button asp-action="Index" type="submit" class="btn btn-warning btn-block mb-4">
                                    Back
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous">
    </script>


</body>

</html>